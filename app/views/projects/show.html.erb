<% if notice %>
<div class="notice"><%= notice %></div>
<% end %>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<p>
  <b>Description:</b>
  <%= @project.description %>
</p>

<p>
  <b>Start date:</b>
  <%= @project.start_date %>
</p>

<p>
  <b>Due date:</b>
  <%= @project.due_date %>
</p>

<p>Teams</p>
<ul>
<% @project.teams.order('name ASC').each do |t| %>
	<li><%= link_to "#{t.name}", project_team_path(@project,t.id) %></li>
<% end %>
</ul>
<%= link_to "Add team to project", new_project_team_path(@project) %><br/>


<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
