<h1>Listing members</h1>

<table class="listing">
  <thead>
    <tr>
      <th>Name</th>
      <th>Action</th>

    </tr>
  </thead>

<% @members.each do |member| %>
  <tr>
    <td><%= link_to "#{member.name}", member %></td>
    <td>
    <%= link_to image_tag('icon/ic_edit.png'), edit_member_path(member) %>
    <%= link_to image_tag('icon/ic_delete.png'), member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Member', new_member_path %>
